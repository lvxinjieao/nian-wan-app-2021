<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bai"
    android:orientation="vertical">

    <android.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <com.nian.wan.app.view.MyImageView
            android:id="@+id/icon"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_picture" />

        <android.widget.RelativeLayout
            android:id="@+id/collection"
            android:layout_width="200px"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px">

            <ImageView
                android:id="@+id/xingxing"
                android:layout_width="70px"
                android:layout_height="70px"
                android:layout_centerHorizontal="true"
                android:src="@drawable/collection_unselect" />

            <TextView
                android:id="@+id/tv_shoucang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/xingxing"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="收藏"
                android:textColor="@color/gray2"
                android:textSize="14sp" />
        </android.widget.RelativeLayout>


        <android.widget.LinearLayout
            android:id="@+id/p"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/collection"
            android:layout_toRightOf="@+id/icon"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <android.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nameww"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="加载中..."
                    android:textColor="@color/zi_hei"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/leixing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="(加载中)"
                    android:textColor="@color/zi_hui2"
                    android:textSize="13sp" />

            </android.widget.LinearLayout>

            <android.widget.LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0M"
                    android:textColor="@color/zi_hui2"
                    android:textSize="13sp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#e7e7e7" />

                <TextView
                    android:id="@+id/zaiwan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/zhuse_lan"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人在玩"
                    android:textColor="@color/zi_hei"
                    android:textSize="13sp" />
            </android.widget.LinearLayout>

            <TextView
                android:id="@+id/yijuhua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4px"
                android:singleLine="true"
                android:text="加载中..."
                android:textColor="@color/zi_hui2"
                android:textSize="14sp" />
        </android.widget.LinearLayout>


    </android.widget.RelativeLayout>
</android.widget.RelativeLayout>