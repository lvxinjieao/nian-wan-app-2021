<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="272px"
        android:orientation="horizontal">

        <com.nian.wan.app.view.ShapeImageView
            android:id="@+id/img_personal_center_balance_bind_game_icon"
            android:layout_width="172px"
            android:layout_height="172px"
            android:scaleType="fitXY"
            app:borderRadius="20px"
            app:radiusType="round"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="60px"
            android:layout_marginLeft="60px"
            android:layout_marginTop="60px"
             />

        <TextView
            android:id="@+id/img_personal_center_balance_bind_game_not"
            android:layout_width="172px"
            android:layout_height="172px"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="60px"
            android:layout_marginLeft="60px"
            android:layout_marginTop="60px"
            android:background="@drawable/normal_shape"
            android:gravity="center"
            android:visibility="gone"
            android:text="溪谷H5"
            android:textSize="36px"
            android:textStyle="bold"
            android:textColor="#bbbaba"/>

        <TextView
            android:id="@+id/tv_personal_center_balance_bind_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40px"
            android:text="神魔之刃" />

        <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.widget.LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/img_personal_center_balance_bind_game_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="60px"
                    android:text="100.0"
                    android:textColor="@color/zhuse_lan"
                    android:textSize="60px" />
            </android.widget.LinearLayout>
        </android.widget.LinearLayout>
    </android.widget.LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_marginLeft="40px"
        android:background="@color/line" />


</android.widget.LinearLayout>