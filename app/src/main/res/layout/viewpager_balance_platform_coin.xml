<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mc.developmentkit.views.SpringView
        android:id="@+id/springView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tou">

        <android.widget.RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.widget.LinearLayout
                android:id="@+id/lv_balance_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="60dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="账户平台币"
                    android:textColor="#000000"
                    android:textSize="64px" />

                <TextView
                    android:id="@+id/tv_balance_ptb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:inputType="numberDecimal"
                    android:text="0.00"
                    android:textColor="#000000"
                    android:textSize="190px" />

            </android.widget.LinearLayout>

            <android.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lv_balance_score"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_balance_ptb_pay"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/yuan_jiao_green_bg"
                    android:text="充值"
                    android:textColor="@color/font_white"
                    android:textSize="18sp" />

            </android.widget.LinearLayout>
        </android.widget.RelativeLayout>
    </com.mc.developmentkit.views.SpringView>

</android.widget.RelativeLayout>