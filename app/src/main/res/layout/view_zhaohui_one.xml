<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zhaohui_one"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/ww"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/login_btn_phone_nor" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/ww"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="输入您的手机号"
                android:inputType=""
                android:maxEms="20"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/bai"
                android:textColorHint="@color/zi_hui2"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_alignParentBottom="true"
                android:alpha="0.6"
                android:background="@color/bai" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/rr"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/login_btn_code_nor" />

                <EditText
                    android:id="@+id/et_yzm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/rr"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="输入验证码"
                    android:inputType=""
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColor="@color/bai"
                    android:textColorHint="@color/zi_hui2"
                    android:textSize="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:alpha="0.6"
                    android:background="@color/bai" />
            </RelativeLayout>

            <TextView
                android:id="@+id/getyanzhegnma"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bian_kuang_green"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/zhuse_lan"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/yuan_jiao_green_bg"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/bai"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/yuan_jiao_green_bg" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:alpha="0.7"
                android:background="@drawable/yuan_jiao_white_bg" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>