<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/yuan_jiao_white_bg">

        <ImageView
            android:id="@+id/close"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:background="@drawable/close" />

        <ImageView
            android:id="@+id/vv"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="30dp"
            android:background="@mipmap/my_opinion_img_success" />

        <TextView
            android:id="@+id/rr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vv"
            android:layout_centerHorizontal="true"
            android:text="领取成功！"
            android:textColor="@color/zi_hei"
            android:textSize="19dp" />

        <LinearLayout
            android:id="@+id/vvv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rr"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的激活码为："
                android:textColor="@color/zi_hui2"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/jihuoma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12348568461325"
                android:textColor="@color/zhuse_lan"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/vvv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="可在"
                android:textColor="@color/zi_hui2"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/mygift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" [ 我的礼包 ] "
                android:textColor="@color/zhuse_lan"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中查看"
                android:textColor="@color/zi_hui2"
                android:textSize="15dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/copy"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_below="@id/gg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/yuan_jiao_green_bg"
            android:gravity="center"
            android:text="复制并开始游戏"
            android:textColor="@color/bai"
            android:textSize="16dp" />
    </RelativeLayout>
</RelativeLayout>