<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.widget.RelativeLayout
        android:layout_width="1024px"
        android:layout_height="494px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/yuan_jiao_login_bg">

        <TextView
            android:id="@+id/tv_dialog_pay_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px"
            android:text="绑定失败"
            android:textColor="@color/zi_hei"
            android:textSize="66px" />

        <android.widget.LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_dialog_pay_success"
            android:layout_centerInParent="true"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <android.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="可能是网络原因，请重新提交"
                    android:textColor="@color/zi_hei"
                    android:textSize="50px" />

            </android.widget.LinearLayout>

        </android.widget.LinearLayout>

        <android.widget.LinearLayout
            android:id="@+id/cc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_bind_phone_failed_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="#999999"
                android:textSize="64px" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/zi_hui3" />

            <TextView
                android:id="@+id/tv_bind_phone_failed_retry"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="重试"
                android:textColor="@color/zhuse_lan"
                android:textSize="64px" />
        </android.widget.LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignTop="@id/cc"
            android:background="@color/zi_hui3" />
    </android.widget.RelativeLayout>
</android.widget.RelativeLayout>