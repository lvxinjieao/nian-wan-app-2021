<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/receiving_address_add_head"
        layout="@layout/receiving_address_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receiving_address_add_head"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="收货人\u3000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_new_address_username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@null"
                android:ellipsize="end"
                android:hint="不少于2个字符"
                android:inputType=""
                android:maxLines="1"
                android:paddingLeft="20px"
                android:textColor="#333333"
                android:textColorHint="@color/font_gray"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="联系电话"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_new_address_user_mobile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="left|center"
                android:hint="完整的11位手机号"
                android:inputType=""
                android:maxLines="1"
                android:paddingLeft="20px"
                android:textColor="#333333"
                android:textColorHint="@color/font_gray"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="所在地区"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/edt_new_address_area"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@null"
                android:gravity="left|center"
                android:hint="省份 城市 区县"
                android:paddingLeft="20px"
                android:textColor="#333333"
                android:textColorHint="@color/font_gray"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.1"
                android:src="@drawable/right_gray" />

        </LinearLayout>

        <!-- <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <TextView
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_margin="10dp"
                 android:layout_weight="0.17"
                 android:text="街道"
                 android:textSize="50px" />

             <EditText
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="0.66"
                 android:background="@null"
                 android:gravity="left|center"
                 android:hint=""
                 android:textColor="@color/font_gray"
                 android:textSize="12sp" />

             <ImageView
                 android:layout_width="30px"
                 android:layout_height="54px"
                 android:layout_gravity="center_vertical"
                 android:layout_marginRight="40px"
                 android:layout_weight="0.08"
                 android:src="@drawable/ma_more" />

         </LinearLayout>-->

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40px"
            android:layout_marginRight="40px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="详细地址"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/edt_new_address_description"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@null"
                android:gravity="left|center"
                android:hint="不少于5个字,且不能全部为数字"
                android:inputType=""
                android:paddingLeft="20px"
                android:textColor="#333333"
                android:textColorHint="@color/font_gray"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line" />
    </LinearLayout>


</RelativeLayout>