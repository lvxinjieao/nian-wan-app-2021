<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_no_play"
    android:visibility="gone"
    android:background="@color/bai">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:background="@mipmap/my_footprint_img_not"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="您暂时还没有玩过任何游戏哦~"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/zi_hei"
        android:textSize="17dp"
        />
    
    <TextView
        android:id="@+id/tv_guangguang"
        android:layout_width="220dp"
        android:layout_height="45dp"
        android:text="去逛逛"
        android:textSize="17dp"
        android:textColor="@color/bai"
        android:background="@drawable/yuan_jiao_green_bg"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>