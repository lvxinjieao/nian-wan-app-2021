<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <android.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <android.widget.LinearLayout
        android:id="@+id/layout_main"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="40px"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_my_gift_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[新手注册大礼包][新手注册大礼包]"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginBottom="20px"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="礼包码: " />

            <TextView
                android:id="@+id/tv_my_gift_code"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:singleLine="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="1FDGO23AWEQ1FDGO23AWEQ1FDGO23AWEQ1FDGO23AWEQ"
                android:layout_marginRight="20px"
                android:textColor="@color/green" />

        </android.widget.LinearLayout>


        <TextView
            android:id="@+id/tv_my_gift_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="魂币*30,洗练石*2,修炼*5,金币*18888888888888" />

    </android.widget.LinearLayout>


    <android.widget.LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center">

        <TextView
            android:id="@+id/btn_copy_gift_code"
            android:layout_width="match_parent"
            android:layout_margin="40px"
            android:layout_height="100px"
            android:layout_weight="1"
            android:background="@drawable/bian_kuang_green"
            android:gravity="center"
            android:text="复制"
            android:textColor="@color/zhuse_lan"
            android:textSize="40px" />

    </android.widget.LinearLayout>

    </android.widget.LinearLayout>

    <View
        android:id="@+id/vw_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40px"
        android:background="@color/e7_line" />
