<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_user_message_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginRight="40px">

        <com.nian.wan.app.view.ShapeImageView
            android:id="@+id/img_home_gift_detail_game_pic"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40px"
            android:scaleType="fitXY"
            android:src="@drawable/default_picture"
            app:borderRadius="20px"
            app:radiusType="round" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/img_home_gift_detail_game_pic"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_user_message_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="17/06/16 09:30:00"
                    android:textColor="@color/font_gray" />

                <TextView
                    android:id="@+id/tv_user_message_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20px"
                    android:layout_toLeftOf="@id/tv_user_message_date"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="开服通知"
                    android:textColor="@color/zi_hei"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_user_message_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20px"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:text="您预约的手游《弹弹堂》已开服,赶紧去玩吧！您预约的手游《弹弹堂》已开服,赶紧去玩吧！您预约的手游《弹弹堂》已开服,赶紧去玩吧！您预约的手游《弹弹堂》已开服,赶紧去玩吧！"
                    android:textColor="@color/font_gray"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="40px"
            android:background="@color/line" />
    </RelativeLayout>

</RelativeLayout>