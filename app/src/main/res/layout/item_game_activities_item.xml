<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bai"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.widget.LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44px"
            android:layout_marginTop="20px"
            android:layout_marginRight="44px"
            android:background="@color/white"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/img_home_game_activities_pic"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/goods_default" />

                <android.widget.LinearLayout
                    android:id="@+id/ll_game_activities_coming_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:background="@drawable/home_store_score_mission_bind_phone_shape"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="250px"
                        android:layout_height="72px"
                        android:gravity="center"
                        android:text="即将开始..."
                        android:textColor="@color/font_white"
                        android:textSize="36px" />
                </android.widget.LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_game_activities_under_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:background="@drawable/home_under_way_shape"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="250px"
                        android:layout_height="72px"
                        android:drawableLeft="@drawable/activity_activity_select"
                        android:gravity="center"
                        android:paddingLeft="20px"
                        android:text="进行中..."
                        android:textColor="@color/font_white"
                        android:textSize="36px" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_game_activities_not_under_way"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|bottom"
                    android:background="@drawable/home_not_under_way_shape"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="250px"
                        android:layout_height="72px"
                        android:gravity="center"
                        android:text="已结束"
                        android:textColor="@color/font_white"
                        android:textSize="36px" />

                </LinearLayout>
            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_home_game_activities_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="[楚乔传]新用户注册免费送2小时体验时间新用户注册免费送2小时体验时间新用户注册免费送2小时体验时间"
                    android:textColor="@color/zi_hei"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_home_game_activities_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12px"
                    android:layout_marginRight="7dp"
                    android:layout_marginBottom="38px"
                    android:maxLines="1"
                    android:text="活动时间:2017.09.01~2017.12.31"
                    android:textColor="@color/zi_hui2"
                    android:textSize="13sp" />
            </LinearLayout>
        </android.widget.LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="30px"
            android:background="@color/ed_line" />
    </LinearLayout>
</LinearLayout>