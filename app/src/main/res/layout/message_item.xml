<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="258px"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_message_icon"
        android:layout_width="160px"
        android:layout_height="160px"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40px"
        android:layout_marginRight="40px"
        android:src="@drawable/default_picture"
          android:scaleType="fitXY"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_message_icon"
        android:layout_alignTop="@+id/img_message_icon"
        android:layout_toRightOf="@+id/img_message_icon"
        android:orientation="vertical">

        <android.widget.RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40px">

            <TextView
                android:id="@+id/tv_message_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="开服通知"
                android:textColor="@color/font_black"
                android:textSize="52px" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="17/06/16 09:30:00"
                android:textColor="@color/font_gray"
                android:textSize="40px"/>

            <TextView
                android:layout_width="1000px"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_message_name"
                android:layout_marginTop="36px"
                android:lines="1"
                android:ellipsize="end"
                android:text="您预约的手游《弹弹堂》已开服，赶紧去玩吧！"
                android:textSize="48px" />

        </android.widget.RelativeLayout>


    </LinearLayout>


</android.widget.RelativeLayout>