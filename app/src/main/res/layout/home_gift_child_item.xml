<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="15dp">

        <TextView
            android:id="@+id/btn_home_gift_copy_gift_code"
            android:layout_width="65dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0.01"
            android:background="@drawable/zhi_jiao_gray"
            android:gravity="center"
            android:text="领取"
            android:textColor="@color/green" />


        <LinearLayout
            android:id="@+id/ll_home_gift_one"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_toLeftOf="@id/btn_home_gift_copy_gift_code"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_home_gift_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="[新手注册大礼包]"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_home_gift_two"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@+id/ll_home_gift_one"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+id/btn_home_gift_copy_gift_code"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_home_gift_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="魂币*30,洗练石*2,修炼*5,金币*18888、魂币*30,洗练石*2,修炼*5,金币*18888"
                android:textColor="@color/gray" />
        </LinearLayout>
    </RelativeLayout>


    <View
        android:id="@+id/vw_line_small"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/ll_home_gift_two"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/xian" />


</LinearLayout>