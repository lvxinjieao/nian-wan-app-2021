<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.widget.RelativeLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/yuan_jiao_white_bg">

        <ImageView
            android:id="@+id/img_real_name_success_close"
            android:layout_width="75px"
            android:layout_height="75px"
            android:background="@drawable/close"
            android:layout_alignParentRight="true"
            android:layout_margin="40px"
            />
        <ImageView
            android:id="@+id/vv"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
              android:src="@drawable/pop_authentication_success"/>
        <TextView
            android:id="@+id/df"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实名认证成功！"
            android:textColor="@color/zi_hei"
            android:textSize="20dp"
            android:layout_below="@id/vv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_below="@id/df"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            >
            <TextView
                android:id="@+id/tv_real_name_success_back"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/bian_kuang_green"
                android:textSize="15dp"
                android:textColor="@color/zhuse_lan"
                android:text="返回个人中心"
                android:gravity="center"/>
        </RelativeLayout>
    </android.widget.RelativeLayout>
</android.widget.RelativeLayout>