                            android:layout_height="110px"
                            android:layout_below="@id/tv_top1_gamename"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/home_ranking_top1_down_bg"
                            android:gravity="center"
                            android:text="开始游戏"
                            android:textColor="@color/text_black"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/huangguan_1"
                            android:layout_width="120px"
                            android:layout_height="80px"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/home_icon_ranking1" />

                        <android.widget.RelativeLayout
                            android:layout_width="210px"
                            android:layout_height="210px"
                            android:layout_below="@id/huangguan_1"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/home_ranking_icon_bg"
                            android:padding="2px">

                            <com.nian.wan.app.view.ShapeImageView
                                android:id="@+id/img_top1_gamaicon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/default_picture"
                                app:borderRadius="20px"
                                app:radiusType="round" />
                        </android.widget.RelativeLayout>
                        <!--覆盖在最外层，点击进入游戏详情页的按钮-->
                        <TextView
                            android:id="@+id/btn_top1_detail"
                            android:layout_width="350px"
                            android:layout_height="350px"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="60px"
                            android:paddingBottom="20px" />
                    </android.widget.RelativeLayout>

                    <android.widget.RelativeLayout
                        android:id="@+id/rl_ranking_top3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_top3_gamename"
                            android:layout_width="350px"
                            android:layout_height="240px"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="200px"
                            android:background="@drawable/home_ranking_top3_gamename_bg"
                            android:ellipsize="end"
                            android:gravity="center_horizontal|bottom"
                            android:maxLines="1"
                            android:paddingBottom="20px"
                            android:text="加载中..."
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/btn_top3_down"
                            android:layout_width="350px"
                            android:layout_height="110px"
                            android:layout_below="@id/tv_top3_gamename"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/home_ranking_top3_down_bg"
                            android:gravity="center"
                            android:text="开始游戏"
                            android:textColor="@color/text_black"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/huangguan_3"
                            android:layout_width="120px"
                            android:layout_height="80px"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="40px"
                            android:background="@mipmap/home_icon_ranking3" />

                        <android.widget.RelativeLayout
                            android:layout_width="210px"
                            android:layout_height="210px"
                            android:layout_below="@id/huangguan_3"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/home_ranking_icon_bg"
                            android:padding="2px">

                            <com.nian.wan.app.view.ShapeImageView
                                android:id="@+id/img_top3_gamaicon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/default_picture"
                                app:borderRadius="20px"
                                app:radiusType="round" />
                        </android.widget.RelativeLayout>
                        <!--覆盖在最外层，点击进入游戏详情页的按钮-->
                        <TextView
                            android:id="@+id/btn_top3_detail"
                            android:layout_width="350px"
                            android:layout_height="350px"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="100px"
                            android:paddingBottom="20px" />
                    </android.widget.RelativeLayout>
                </android.widget.LinearLayout>

                <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:background="@color/e7_line" />-->

                <android.widget.LinearLayout
                    android:id="@+id/error_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="365px"
                        android:layout_height="365px"
                        android:src="@drawable/no_date" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="~空空如也~"
                        android:textColor="@color/font_gray_1" />
                </android.widget.LinearLayout>


                <ListView
                    android:id="@+id/list_ranking"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="@null"
                    android:overScrollMode="never"
                    android:scrollbars="none"></ListView>
            </android.widget.LinearLayout>
        </ScrollView>
    </com.mc.developmentkit.views.SpringView>
</android.widget.LinearLayout>