<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mc.developmentkit.views.SpringView
        android:id="@+id/springView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.widget.LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.widget.LinearLayout
                    android:id="@+id/ll_racking_top"
                    android:layout_width="match_parent"
                    android:layout_height="580px"
                    android:orientation="horizontal"
                    android:paddingLeft="40px"
                    android:paddingRight="40px">

                    <android.widget.RelativeLayout
                        android:id="@+id/rl_ranking_top2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_top2_gamename"
                            android:layout_width="350px"
                            android:layout_height="240px"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="200px"
                            android:background="@drawable/home_ranking_top2_gamename_bg"
                            android:ellipsize="end"
                            android:gravity="center_horizontal|bottom"
                            android:maxLines="1"
                            android:paddingBottom="20px"
                            android:text="加载中..."
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/btn_top2_down"
                            android:layout_width="350px"
                            android:layout_height="110px"
                            android:layout_below="@id/tv_top2_gamename"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/home_ranking_top2_down_bg"
                            android:gravity="center"
                            android:text="开始游戏"
                            android:textColor="@color/text_black"
                            android:textSize="13sp" />

                        <ImageView
                            android:id="@+id/huangguan_2"
                            android:layout_width="120px"
                            android:layout_height="80px"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="40px"
                            android:background="@mipmap/home_icon_ranking2" />

                        <android.widget.RelativeLayout
                            android:layout_width="210px"
                            android:layout_height="210px"
                            android:layout_below="@id/huangguan_2"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/home_ranking_icon_bg"
                            android:padding="2px">

                            <com.nian.wan.app.view.ShapeImageView
                                android:id="@+id/img_top2_gamaicon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_centerInParent="true"
                                android:scaleType="fitXY"
                                android:src="@drawable/default_picture"
                                app:borderRadius="20px"
                                app:radiusType="round" />
                        </android.widget.RelativeLayout>
                        <!--覆盖在最外层，点击进入游戏详情页的按钮-->
                        <TextView
                            android:id="@+id/btn_top2_detail"
                            android:layout_width="350px"
                            android:layout_height="350px"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="100px"
                            android:paddingBottom="20px" />
                    </android.widget.RelativeLayout>

                    <android.widget.RelativeLayout
                        android:id="@+id/rl_ranking_top1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_top1_gamename"
                            android:layout_width="350px"
                            android:layout_height="240px"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="160px"
                            android:background="@drawable/home_ranking_top1_gamename_bg"
                            android:ellipsize="end"
                            android:gravity="center_horizontal|bottom"
                            android:maxLines="1"
                            android:paddingBottom="20px"
                            android:text="加载中..."
                            android:textColor="@color/white"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/btn_top1_down"
