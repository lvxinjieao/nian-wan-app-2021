<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.mcxtzhang.swipemenulib.SwipeMenuLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_my_collection_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ee">

                <CheckBox
                    android:id="@+id/cb_my_collection_is_check"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:button="@drawable/normal_blue_circle_check_box_style"
                    android:checked="false"
                    android:gravity="center"
                    android:visibility="gone" />

                <com.nian.wan.app.view.ShapeImageView
                    android:id="@+id/img_my_collection_pic"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/cb_my_collection_is_check"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_picture"
                    app:borderRadius="20px"
                    app:radiusType="round" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_my_collection_game_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/img_my_collection_pic"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/img_my_collection_pic"
                    android:singleLine="true"
                    android:text="炉石传说炉石传说炉石传说炉石传说炉石传说"
                    android:textColor="@color/gray2"
                    android:textSize="18sp" />

                <android.widget.RelativeLayout
                    android:id="@+id/sss"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_below="@id/tv_my_collection_game_name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/img_my_collection_pic"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_my_collection_game_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="冒险冒险"
                        android:textColor="@color/gray"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/xx"
                        android:layout_width="2dp"
                        android:layout_height="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:layout_toRightOf="@+id/tv_my_collection_game_type"
                        android:background="#e7e7e7" />

                    <TextView
                        android:id="@+id/tv_my_collection_game_player"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/xx"
                        android:text="1523"
                        android:gravity="center_vertical"
                        android:textColor="@color/zhuse_lan"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_my_collection_game_player"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="人在玩"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />

                </android.widget.RelativeLayout>
            </RelativeLayout>


            <android.widget.RelativeLayout
                android:id="@+id/ee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <TextView
                    android:id="@+id/tv_go_look_like"
                    android:layout_width="70dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bian_kuang_green"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="找相似"
                    android:textColor="@color/green"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_go_play"
                    android:layout_width="70dp"
                    android:layout_height="28dp"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_go_look_like"
                    android:background="@drawable/yuan_jiao_green_bg"
                    android:focusable="false"
                    android:gravity="center"
                    android:text="去玩"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/font_white"
                    android:textSize="14sp" />

            </android.widget.RelativeLayout>


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@id/ee"
                android:singleLine="true"
                android:text="炉石传说是一款很好玩的游戏炉石传说是一款很好玩的游戏"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:visibility="gone" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="40px"
                android:background="@color/e7_line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/my_collection_swipe_delete">

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:background="@drawable/my_collection_delete"
                android:textColor="@android:color/white" />
        </RelativeLayout>
    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>

</LinearLayout>