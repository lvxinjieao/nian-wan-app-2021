<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <android.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5px"
        android:layout_marginTop="30px">

        <TextView
            android:id="@+id/tv_my_gift_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40px"
            android:text="[新手注册大礼包]"
            android:textColor="@android:color/black"
            android:textSize="14sp" />
    </android.widget.LinearLayout>

    <android.widget.LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_my_gift_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="40px"
            android:layout_weight="0.2"
            android:text="魂币*30,洗练石*2,修炼*5,金币*18888888888888" />


        <TextView
            android:id="@+id/btn_copy_gift_code"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_weight="0.01"
            android:background="@drawable/bian_kuang_green"
            android:gravity="center"
            android:text="领取"
            android:textColor="@color/zhuse_lan"
            android:textSize="40px" />

    </android.widget.LinearLayout>


    <View
        android:id="@+id/vw_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="40px"
        android:background="@color/e7_line" />

    <ExpandableListView
        android:id="@+id/ev_expand_other_package"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ExpandableListView>
</android.widget.LinearLayout>