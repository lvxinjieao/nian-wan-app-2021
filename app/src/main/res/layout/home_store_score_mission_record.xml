<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mtou"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/zhuse_lan"/>

    <android.widget.RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/zhuse_lan">

        <android.widget.RelativeLayout
            android:id="@+id/back"
            android:layout_width="45dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/left_white" />
        </android.widget.RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/bai"
            android:textSize="20dp" />

        <ImageView
            android:id="@+id/img_home_store_record_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/nav_mall_rule"
              android:visibility="visible" />
    </android.widget.RelativeLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/tb_home_store_score_mission_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        app:tabBackground="@color/transparent_note"
        android:background="@color/bai"
        app:tabIndicatorColor="@color/green"
        app:tabIndicatorHeight="1dp"
        app:tabSelectedTextColor="@color/green"/>

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/tb_balance_title"
        android:layout_alignRight="@+id/tb_balance_title"
        android:layout_below="@+id/tb_balance_title"
        android:background="@color/e7_line"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </android.support.v4.view.ViewPager>

</android.widget.LinearLayout>