<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.widget.LinearLayout
        android:id="@+id/ll_recent_play"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <android.widget.RelativeLayout
            android:layout_width="182px"
            android:layout_height="172px"
            android:layout_gravity="center_horizontal">

            <com.nian.wan.app.view.ShapeImageView
                android:id="@+id/btn_home_recently_pic"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_picture"
                app:borderRadius="30px"
                app:radiusType="round" />

            <ImageView
                android:id="@+id/img_tag"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:background="@mipmap/tag_h5" />
        </android.widget.RelativeLayout>

        <TextView
            android:id="@+id/btn_home_recently_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text="少女咖啡枪少女咖啡枪少女咖啡枪"
            android:textColor="@color/font_black"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_home_recently_start"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bian_kuang_green"
            android:text="开始"
            android:textColor="@color/green"
            android:textSize="14sp"
            android:visibility="invisible" />
    </android.widget.LinearLayout>


</android.widget.LinearLayout>