<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <com.nian.wan.app.view.MyImageView
        android:id="@+id/icon1"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_picture" />

    <TextView
        android:id="@+id/name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/icon1"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@id/icon1"
        android:text="炉石传说"
        android:textColor="@color/zi"
        android:textSize="13dp" />

    <RelativeLayout
        android:id="@+id/ee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        >

        <Button
            android:id="@+id/kaishiwan"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:focusable="false"
            android:text="开始玩"
            android:textSize="12dp" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/sss"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@id/name1"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/icon1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="冒险"
            android:textColor="@color/type"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/xx"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_margin="3dp"
            android:layout_toRightOf="@id/type1"
            android:background="#000" />

        <TextView
            android:id="@+id/ren6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toEndOf="@+id/xx"
            android:layout_toRightOf="@+id/xx"
            android:text="1523"
            android:textColor="@color/theme_cheng"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/ren6"
            android:text="人在玩"
            android:textColor="@color/zi"
            android:textSize="12dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sss"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="3dp"
        android:layout_toLeftOf="@id/ee"
        android:layout_toRightOf="@id/icon1"
        android:singleLine="true"
        android:textColor="@color/zi"
        android:textSize="12dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/xian" />
</RelativeLayout>