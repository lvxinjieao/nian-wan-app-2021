<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.widget.RelativeLayout
        android:layout_width="1006px"
        android:layout_height="620px"
        android:layout_centerInParent="true"
        android:background="@drawable/yuan_jiao_login_bg">

        <android.widget.RelativeLayout
            android:id="@+id/img_bind_phone_success_close"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:layout_alignParentBottom="true">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentTop="true"
                android:background="#999999" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="知道了"
                android:textColor="@color/green"
                android:textSize="66px" />
        </android.widget.RelativeLayout>


        <TextView
            android:id="@+id/tv_phone_bind_success"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="100px"
            android:layout_marginTop="80px"
            android:layout_marginRight="100px"
            android:text="绑定成功"
            android:textColor="@color/zi_hei"
            android:textSize="66px" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_phone_bind_success"
            android:layout_marginLeft="80px"
            android:layout_marginTop="40px"
            android:text="绑定手机号："
            android:textColor="#666666"
            android:textSize="45px" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_phone"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="80px"
            android:layout_marginTop="20px"
            android:layout_marginRight="80px"
            android:text="该帐号已经获得过绑定手机积分奖励,本次绑定无奖励"
            android:textColor="#666666"
            android:textSize="45px" />
    </android.widget.RelativeLayout>
</android.widget.RelativeLayout>